<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="demo.odata.controller.S1"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="{i18n>categories}" showFooter="true">
		<List items="{/Categories}" >
			<items>
				<StandardListItem title="{Name}" type="Active" press="onListItemPress" />
			</items>
		</List>
		<footer>
			<Toolbar>
				<content>
					<ToolbarSpacer />
					<Button icon="sap-icon://add" press="onAdd" /> 
				</content>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>